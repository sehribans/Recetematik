@model TblBirim
@{
    List<TblBirim> birim = ViewBag.Birim;
}
<div class="col-6">
    <div class="card mb-4">
        <h5 class="card-header">Ürün Birim Cinsi</h5>
        <div class="card-body">
            <form asp-action="BirimForm" method="post">
                <div class="mb-3 d-flex">
                    <div class="col-lg-5 me-1">
                        <input type="text" class="form-control" id="defaultFormControlInput" placeholder="Birim Adı" aria-describedby="defaultFormControlHelp" asp-for="Ad" />
                    </div>
                    
                    <button type="submit" class="btn text-white mb-2 col-lg-2 btn-primary">Ekle</button>
                </div>

            </form>
        </div>
    </div>
</div>
<div class="card col-6">
    <div class="d-flex justify-content-between">
        <h5 class="card-header">Hammadde Birimleri</h5>

    </div>


    <div class="table-responsive text-nowrap">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>BİRİM AD</th>
                    <th>İŞLEMLER</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">

                @foreach (var item in birim)
                {
                    <tr>
                        
                        <td>@item.Id</td>
                        <td>@item.Ad</td>
                        <td>
                            <div class="table-actions d-flex align-items-center gap-3 fs-6">
                               
                                <a href="/Urun/BirimSil/@item.Id" class="text-danger" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Delete"><i class="bi bi-trash-fill"></i></a>
                            </div>
                        </td>
                       
                    </tr>
                }




            </tbody>
        </table>
    </div>
</div>
